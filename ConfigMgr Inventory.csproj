<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net7.0;net6.0</TargetFrameworks>
    <LangVersion>latest</LangVersion>
    <RootNamespace>ConfigurationManager.ManagedObjectFormat</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Title>ConfigMgr Inventory Extension</Title>
    <Description>Extend and manage ConfigMgr's Hardware Inventory Schema locally or remotely</Description>
    <PackageId>ConfigurationManager.ManagedObjectFormat</PackageId>
    <Company>Patch My PC</Company>
    <RepositoryUrl>https://github.com/GCWills/ConfigMgr-Inventory</RepositoryUrl>
    <PackageTags>ConfigMgr</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>False</PackageRequireLicenseAcceptance>
    <VersionPrefix>1.0.4</VersionPrefix>
    <SignAssembly>False</SignAssembly>
    <Authors>GCWills</Authors>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

 
  <ItemGroup>
    <PackageReference Include="System.Management" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
</Project>
